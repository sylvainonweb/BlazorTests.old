@using BlazorTests.Shared
@page "/"
@page "/Customer"
@inherits CustomerListComponent


<ComponentWrapper Title="@Title">

    @if (@Customers == null)
    {
        <p><em>Chargement en cours ...</em></p>
    }
    else
    {
        <table id ="customerTable" class="table table-sm table-bordered table-striped table-hover">
            <thead>  
                <tr>
                    <th class="headerFilter"></th>
                    <th class="headerFilter"></th>
                    <th class="headerFilter"></th>
                    <th class="headerFilter"></th>
                    <th class="headerWithoutFilter"></th>
                </tr>                                                           
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Type</th>
                    <th>
                        <button class="btn btn-outline-light btn-xs gridColumnButton" onclick="@(() => AddCustomer())">
                            <span class="oi oi-plus" aria-hidden="true"></span>
                        </button>
                    </th>
                </tr>                                            
            </thead>
            <tbody>
                @foreach (var customer in Customers)
                {
                    <tr>
                        <td class="autoSizeToContent">@customer.Id</td>
                        <td>@customer.Name</td>
                        <td>@customer.FirstName</td>
                        <td>@customer.CustomerTypeText</td>
                        <td class="autoSizeToContent">
                            <button class="btn btn-outline-success btn-xs gridColumnButton" onclick="@(() => EditCustomer(customer.Id))">
                                <span class="oi oi-pencil" aria-hidden="true"></span>
                            </button>
                            <DeleteButton DeleteAction="@(() => DeleteCustomer(customer.Id))"></DeleteButton>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        }

    </ComponentWrapper>

